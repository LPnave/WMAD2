<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclecartRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/cartitemimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="image"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/cartitemname"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cartitemimage"
            android:layout_toRightOf="@+id/cartitemimage"
            android:text="itemname"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cartitemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cartitemname"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/cartitemimage"
            android:layout_toRightOf="@+id/cartitemimage"
            android:text="itemprice" />

        <Button
            android:id="@+id/paybtn"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cartitemimage"
            android:layout_toRightOf="@+id/cartitemimage"
            android:text="Pay" />

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text="subtotal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cartitemprice"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cartitemimage"
            android:layout_toRightOf="@+id/cartitemimage"
            android:text="Sub Total:" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cartitemprice"
            android:layout_toRightOf="@+id/cartitemprice"
            android:text="Items:" />

        <TextView
            android:id="@+id/viewnumberofitems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:text="0" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cartitemimage"
            android:layout_toRightOf="@+id/cartitemimage"
            android:background="@drawable/ic_delete" />
    </android.support.v7.widget.CardView>

</RelativeLayout>